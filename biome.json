{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "organizeImports": { "enabled": true },
  "linter": { "enabled": true },
  "formatter": { "enabled": true, "indentStyle": "space", "indentWidth": 2 },
  "files": {
    "ignore": [
      "node_modules",
      "**/node_modules",
      ".next",
      "build",
      "dist",
      ".venv",
      "**/.venv",
      ".vscode",
      "**/.vscode",
      "*.config.js",
      "*.config.mjs",
      "*.config.ts"
    ]
  }
}
